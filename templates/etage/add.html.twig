{% extends 'departement/base.html.twig' %}

{% block title %} Ajouter un Étage {% endblock %}

{% block body %}
<link rel="stylesheet" href="{{ asset('css1/formulaire.css') }}">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="container mt-5">
    <h1 class="text-center text-primary"><i class="fas fa-plus-circle"></i> Ajouter un Étage</h1>

    {% for message in app.flashes('success') %}
        <script>
            Swal.fire({
                title: 'Succès !',
                text: '{{ message }}',
                icon: 'success',
                confirmButtonText: 'OK',
                timer: 3000
            });
        </script>
    {% endfor %}

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded">
                <div class="card-header bg-primary text-white text-center">
                    <h5 class="mb-0"><i class="fas fa-layer-group"></i> Formulaire d'Ajout</h5>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    <div class="mb-3">
                        <label class="form-label fw-bold"><i class="fas fa-sort-numeric-up"></i> Numéro de l'Étage</label>
                        {{ form_widget(form.Numero, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.Numero) }}
                    </div>

                   

                    <div class="mb-3">
                        <label class="form-label fw-bold"><i class="fas fa-building"></i> Département</label>
                        {{ form_widget(form.departement, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.departement) }}
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Ajouter
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
