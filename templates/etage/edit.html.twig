{% extends 'etage/base.html.twig' %}

{% block title %} Modifier un Étage {% endblock %}

{% block body %}
<link rel="stylesheet" href="{{ asset('css1/formulaire.css') }}">

<div class="container mt-5">
    <h1 class="text-center text-warning"><i class="fas fa-edit"></i> Modifier un Étage</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success text-center">{{ message }}</div>
    {% endfor %}

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded">
                <div class="card-header bg-warning text-white text-center">
                    <h5 class="mb-0"><i class="fas fa-layer-group"></i> Formulaire de Modification</h5>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                    <div class="mb-3">
                        <label class="form-label fw-bold"><i class="fas fa-sort-numeric-up"></i> Numéro de l'Étage</label>
                        {{ form_widget(form.Numero, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.Numero) }}
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold"><i class="fas fa-door-open"></i> Nombre de Salles</label>
                        {{ form_widget(form.NbrSalle, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.NbrSalle) }}
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold"><i class="fas fa-building"></i> Département</label>
                        {{ form_widget(form.departement, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.departement) }}
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-warning"><i class="fas fa-save"></i> Modifier</button>
                        <a href="{{ path('etage_index') }}" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Retour</a>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
