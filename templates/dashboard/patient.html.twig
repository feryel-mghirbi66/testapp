{% extends '/dashboard/base.html.twig' %}

{% block title %}Dashboard Patient{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background-color: #F0F0F0;
            font-family: Arial, sans-serif;
            margin: 0;
        }

        /* Sidebar */
        .sidebar {
            background-color: #003a5d;
            color: white;
            height: 100vh;
            width: 250px;
            position: fixed;
            padding: 20px;
            box-sizing: border-box;
            top: 0;
            left: 0;
            overflow-y: auto;
        }

        .sidebar h3 {
            font-size: 22px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .sidebar a {
            display: block;
            color: white;
            text-decoration: none;
            padding: 10px 0;
            font-size: 16px;
            transition: background-color 0.3s;
        }

        .sidebar a:hover {
            background-color: #005a8d;
            text-decoration: underline;
        }

        /* Main Content */
        .main-content {
            margin-left: 270px;
            padding: 40px 20px;
            background-color: #c2e1f5; /* Bleu clair */
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
        }

        .main-content h1 {
            color: #003a5d;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .main-content p {
            color: #005a8d;
            font-size: 18px;
            margin-bottom: 30px;
        }

        /* Task Sections */
        .task-sections {
            display: flex;
            flex-wrap: wrap;
            gap: 30px;
            justify-content: flex-start;
            padding: 20px 0;
            margin-top: 20px;
        }

        .task-card {
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            color: white;
            transition: 0.3s;
            width: 300px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
            margin-bottom: 20px;
        }

        .task-card:hover {
            transform: scale(1.05);
        }

        .task-card h3 {
            font-weight: bold;
            font-size: 20px;
            margin-bottom: 10px;
        }

        .task-card p {
            font-size: 16px;
            margin-bottom: 15px;
        }

        .task-card a {
            background-color: black;
            padding: 10px 15px;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            display: inline-block;
        }

        .task-card a:hover {
            background-color: rgba(0, 0, 0, 0.7);
        }

        .blue-card {
            background-color: #00a3e0;
        }

        .dark-blue-card {
            background-color: #003a5d;
        }

        /* Responsive */
        @media (max-width: 992px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }

            .main-content {
                margin-left: 0;
            }

            .task-sections {
                flex-direction: column;
                align-items: center;
            }

            .task-card {
                width: 90%;
                max-width: 350px;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="patient-container" style="display: flex; min-height: 100vh;">
    <!-- Sidebar -->
    <div class="sidebar">
        <h3>Menu Patient</h3>
        <ul>
             
            <li><a href="#">Dossier Médical</a></li>
            
            <li><a href="{{ path('app_consultation') }}">Rendez-vous</a></li>
            <li><a href="#">Ordonnances</a></li>
            <li><a href="{{ path('app_command_list') }}">Médicaments</a></li>
            
            <li><a href="#">Résultats d'examen</a></li>
            
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <h1>Bienvenue sur votre espace patient</h1>
        <p>Consultez vos rendez-vous, dossiers médicaux et ordonnances.</p>

        <!-- Task Sections -->
        <div class="task-sections">
            <div class="task-card blue-card">
                <h3>Dossier Médical</h3>
                <p>Consultez votre historique médical</p>
            </div>
            <div class="task-card blue-card">
                 <li><a href="{{ path('app_consultation') }}">Rendez-vous</a></li>
                <p>Voir et planifier vos rendez-vous</p>
            </div>
            <div class="task-card dark-blue-card">
                <h3>Ordonnances</h3>
                <p>Consulter vos ordonnances</p>
            </div>
            <div class="task-card blue-card">
                 <li><a href="{{ path('app_command_list') }}">Médicaments</a></li>
                <p>Gérer vos médicaments</p>
            </div>
            <div class="task-card dark-blue-card">
                <h3>Résultats d'examen</h3>
                <p>Consulter vos résultats d'examen</p>
            </div>
            <div class="task-card dark-blue-card">
                <h3>Profil</h3>
                <p>Modifier vos informations personnelles</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
