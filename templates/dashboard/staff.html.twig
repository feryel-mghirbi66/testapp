 {% extends '/dashboard/base.html.twig' %}

{% block title %}Dashboard Staff{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background-color: #F8F9FA;
            font-family: Arial, sans-serif;
            margin: 0;
        }

        /* Container */
        .staff-container {
            display: flex;
            min-height: 100vh;
            width: 100%;
        }

        /* Sidebar */
        .sidebar {
            background-color: #2C3E50;
            color: white;
            height: 100vh;
            width: 250px;
            position: fixed;
            padding: 20px;
            box-sizing: border-box;
            top: 0;
            left: 0;
            overflow-y: auto;
        }

        .sidebar h3 {
            font-size: 22px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .sidebar a {
            display: block;
            color: white;
            text-decoration: none;
            padding: 10px 0;
            font-size: 16px;
            transition: background-color 0.3s;
        }

        .sidebar a:hover {
            background-color: #34495E;
            text-decoration: underline;
        }

        /* Main Content */
        .main-content {
            flex-grow: 1;
            margin-left: 270px;
            padding: 40px 20px;
            background-color: #ECF0F1;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            width: calc(100% - 270px);
        }

        .main-content h1 {
            color: #2C3E50;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .main-content p {
            color: #34495E;
            font-size: 18px;
            margin-bottom: 30px;
        }

        /* Task Sections */
        .task-sections {
            display: flex;
            flex-wrap: wrap;
            gap: 30px;
            justify-content: flex-start;
            padding: 20px 0;
            margin-top: 20px;
        }

        .task-card {
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            color: white;
            transition: 0.3s;
            width: 300px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
            margin-bottom: 20px;
        }

        .task-card:hover {
            transform: scale(1.05);
        }

        .task-card h3 {
            font-weight: bold;
            font-size: 20px;
            margin-bottom: 10px;
        }

        .task-card p {
            font-size: 16px;
            margin-bottom: 15px;
        }

        .blue-card {
            background-color: #3498DB;
        }

        .green-card {
            background-color: #2ECC71;
        }

        /* Responsive */
        @media (max-width: 992px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }

            .main-content {
                margin-left: 0;
                width: 100%;
            }

            .task-sections {
                flex-direction: column;
                align-items: center;
            }

            .task-card {
                width: 90%;
                max-width: 350px;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="staff-container">
    <!-- Sidebar -->
    <div class="sidebar">
        <h3>Menu Staff</h3>
        <ul>
            <li><a href="#">Dashboard</a></li>
            <li><a href="{{ path('admin_equipment') }}">Gestion des Équipements</a></li>
            <li><a href="#">Profil</a></li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <h1>Bienvenue sur votre espace Staff</h1>
        <p>Gérez les tâches administratives et techniques avec efficacité.</p>

        <!-- Task Sections -->
        <div class="task-sections">
            <div class="task-card blue-card">
                <h3>Gestion des Équipements</h3>
                <p>Superviser et maintenir les équipements de la clinique</p>
                <a href="{{ path('admin_equipment') }}" style="color: white; text-decoration: underline;">Accéder</a>
            </div>
            <div class="task-card blue-card">
                <h3>Communication Interne</h3>
                <p>Échanger avec les équipes médicales</p>
            </div>
            <div class="task-card green-card">
                <h3>Profil</h3>
                <p>Modifier vos informations personnelles</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
