{% extends 'base2.html.twig' %}

{% block title %}Liste des Médicaments{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2 class="text-center">Liste des Médicaments</h2>

    <a href="{{ path('app_medicament_new') }}" class="btn btn-success mb-3">Ajouter un Médicament</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Type</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for medicament in medicaments %}
                <tr>
                    <td>{{ medicament.nomMedicament }}</td>
                    <td>{{ medicament.descriptionMedicament }}</td>
                    <td>{{ medicament.typeMedicament }}</td>
                    <td>{{ medicament.prixMedicament }}€</td>
                    <td>{{ medicament.quantiteStock }}</td>
                    <td>
                        <a href="{{ path('app_medicament_edit', {'id': medicament.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        {{ include('medicament/_delete_form.html.twig', { 'medicament': medicament }) }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">Aucun médicament trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
