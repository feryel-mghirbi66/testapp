 <div class="header-container">
    <img src="/imagesS/logo.png" alt="Team Logo" class="team-logo">
    <div class="header-title">  LES Services Medical </div>
</div>

<div class="form-container">
 
    <div class="form-title">Ajouter Nouveau Service</div>

    <form method="post" action="{{ path('app_service_new') }}" novalidate>

        {{ form_start(form, {'attr': { 'novalidate': 'novalidate' }}) }}
        
        <!-- Name Field -->
        <div class="form-group">
            {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            <div class="form-error">
                {{ form_errors(form.name) }} <!-- Validation error for name -->
            </div>
        </div>

        <!-- Description Field -->
        <div class="form-group">
            {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            <div class="form-error">
                {{ form_errors(form.description) }} <!-- Validation error for description -->
            </div>
        </div>

        <!-- Duration Field -->
        <div class="form-group">
            {{ form_label(form.duration, null, {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.duration, {'attr': {'class': 'form-control'}}) }}
            <div class="form-error">
                {{ form_errors(form.duration) }} <!-- Validation error for duration -->
            </div>
        </div>
        
        <!-- Submit Button -->
        <div class="button-container">
            <button type="submit">Ajouter</button>
        </div>
        
        {{ form_end(form) }}
    </form>
</div>

