{# templates/admin/ajouter_equipement.html.twig #}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ajouter un équipement</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
</head>
<body style="font-family: Arial, sans-serif; background-color: #F0F0F0;">

<div class="container mt-5">
    <h1>Ajouter un nouvel équipement</h1>
    <form method="post">
        {{ form_start(form) }}
            {{ form_row(form.nom) }}
            {{ form_row(form.type) }}
            {{ form_row(form.statut) }}  {# Le champ statut sera maintenant un select #}
            {{ form_row(form.category) }}
            <button type="submit" class="btn btn-primary">Enregistrer</button>
        {{ form_end(form) }}
    </form>
</div>

</body>
</html>
