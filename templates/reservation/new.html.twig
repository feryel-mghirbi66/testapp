{% extends 'departement/base.html.twig' %}

{% block body %}
<link rel="stylesheet" href="{{ asset('css1/formulaire.css') }}">
<div class="container mt-5">
    <h2 class="text-center text-primary">Réserver la salle {{ salle.nom }}</h2>

    <div class="alert alert-info">
        <strong>Priorité :</strong> {{ salle.priorite }}<br>
        <strong>Statut :</strong> 
        {% if salle.status == 'Disponible' %}
            <span class="text-success">Disponible</span>
        {% else %}
            <span class="text-danger">Occupée / Maintenance</span>
        {% endif %}
    </div>

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    <div class="card shadow-lg mt-4">
        <div class="card-body">
            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.dateDebut) }}
                    {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.dateFin) }}
                    {{ form_widget(form.dateFin, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check-circle"></i> Réserver
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
