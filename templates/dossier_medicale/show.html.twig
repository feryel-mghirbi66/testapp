            color: #388e3c;
        }

        /* Animation */
        .animate-fade-up {
            animation: fadeUp 0.5s ease-out;
        }

        @keyframes fadeUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive adjustments */
        @media screen and (max-width: 768px) {
            .header-section {
