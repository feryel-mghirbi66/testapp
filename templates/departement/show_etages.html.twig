{% extends '/departement/base1.html.twig' %}

{% block title %} Étages de {{ departement.nom }} {% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="text-center mb-4">Étages de {{ departement.nom }}</h2>

    <div class="row">
        {% for etage in etages %}
            <div class="col-md-4">
                <a href="{{ path('etage_salles_show', {'id': etage.id}) }}" class="text-decoration-none">
                    <div class="card mb-3 shadow-sm border-0 rounded-lg">
                        <div class="card-body text-center">
                            <h5 class="card-title text-primary fw-bold">Étage {{ etage.numero }}</h5>
                            <p class="card-text text-muted">Nombre de salles: {{ etage.nbrSalle }}</p>
                        </div>
                    </div>
                </a>
            </div>
        {% else %}
            <p class="text-center text-muted">Aucun étage trouvé.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
