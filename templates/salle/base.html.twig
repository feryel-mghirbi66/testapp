<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}My Application{% endblock %}</title>
    
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{ asset('css1/departement.css') }}">

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.21/dist/sweetalert2.all.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.4.21/dist/sweetalert2.min.css">

    <style>
        /* Sidebar Styling */
        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: rgb(124, 172, 234);
            color: white;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 20px;
            text-align: center;
        }

        .sidebar img {
            width: 150px;
            margin-bottom: 15px;
        }

        .sidebar ul {
            list-style-type: none;
            padding: 0;
        }

        .sidebar ul li {
            padding: 10px 20px;
        }

        .sidebar ul li a {
            color: white;
            text-decoration: none;
            display: block;
        }

        .sidebar ul li a:hover {
            background-color: #27496D;
            border-radius: 5px;
        }

        .submenu {
            display: none;
            padding-left: 20px;
            opacity: 0;
            transition: opacity 0.3s ease-in-out;
        }

        .submenu.show {
            display: block;
            opacity: 1;
        }

        .content {
            margin-left: 260px;
            padding: 20px;
        }

        @media (max-width: 768px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }
            .content {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>

    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar">
            <img src="{{ asset('img/logo.png') }}" alt="Logo Application"> 

            <ul>
                <li><a href="{{ path('admin_home') }}"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                <li><a href="{{ path('admin_users') }}"><i class="fas fa-users"></i> Users</a></li>
                <li><a href="{{ path('admin_services') }}"><i class="fas fa-briefcase-medical"></i> Services</a></li>
                <li><a href="{{ path('admin_equipment') }}"><i class="fas fa-tools"></i> Equipment</a></li>
                
                <!-- Infrastructure avec sous-menu -->
                <li>
                    <a href="#" class="submenu-toggle">
                        <i class="fas fa-building"></i> Infrastructure <i class="fas fa-chevron-down float-end"></i>
                    </a>
                    <ul class="submenu">
                        <li><a href="{{ path('departement_index') }}"><i class="fas fa-city"></i> Départements</a></li>
                        <li><a href="{{ path('etage_index') }}"><i class="fas fa-layer-group"></i> Étages</a></li>
                        <li><a href="{{ path('salle_index') }}"><i class="fas fa-layer-group"></i> Salles</a></li>
                    </ul>
                </li>

                <li><a href="{{ path('admin_medical_records') }}"><i class="fas fa-file-medical"></i> Medical Records</a></li>
                <li><a href="{{ path('admin_medication_stock') }}"><i class="fas fa-pills"></i> Medication Stock</a></li>
            </ul>
        </div>

        <!-- Contenu principal -->
        <div class="content">
            {% block body %}
                <div class="container mt-5">
                    <h1 class="text-center mb-4">Liste des Départements</h1>

                    <!-- Messages Flash -->
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success text-center">
                            <i class="fas fa-check-circle"></i> {{ message }}
                        </div>
                        <script>
                            Swal.fire({
                                title: 'Succès!',
                                text: '{{ message }}',
                                icon: 'success',
                                draggable: true
                            });
                        </script>
                    {% endfor %}

                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger text-center">
                            <i class="fas fa-times-circle"></i> {{ message }}
                        </div>
                        <script>
                            Swal.fire({
                                title: 'Erreur!',
                                text: '{{ message }}',
                                icon: 'error',
                                draggable: true
                            });
                        </script>
                    {% endfor %}

                    <!-- Votre tableau ou d'autres contenus ici -->
                </div>
            {% endblock %}
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script pour le sous-menu -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Fonction pour afficher/masquer le sous-menu
            document.querySelectorAll('.submenu-toggle').forEach(function (toggle) {
                toggle.addEventListener('click', function (event) {
                    event.preventDefault(); // Empêche le lien de rediriger
                    let submenu = this.nextElementSibling; // Sélectionne le sous-menu suivant
                    submenu.classList.toggle('show'); // Alterne l'affichage du sous-menu
                });
            });

            // Fermer tous les sous-menus si l'utilisateur clique en dehors
            document.addEventListener('click', function (event) {
                if (!event.target.closest('.sidebar')) {
                    document.querySelectorAll('.submenu').forEach(function (submenu) {
                        submenu.classList.remove('show');
                    });
                }
            });
        });
    </script>

</body>
</html>
