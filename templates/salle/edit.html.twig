{% extends '/departement/base.html.twig' %}

{% block body %}
<link rel="stylesheet" href="{{ asset('css1/formulaire.css') }}">
    <div class="container mt-5">
        <h1 class="text-center mb-4">Modifier la Salle</h1>

        <!-- Affichage des messages flash de succès -->
        {% for message in app.flashes('success') %}
            <div class="alert alert-success text-center">
                <i class="fas fa-check-circle"></i> {{ message }}
            </div>
        {% endfor %}

        <!-- Formulaire de modification -->
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        
        <!-- Affichage des champs du formulaire -->
        {% for field in form %}
            <div class="form-group">
                <!-- Label du champ -->
                {{ form_label(field) }}
                
                <!-- Champ du formulaire -->
                {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
            </div>
        {% endfor %}

        <!-- Boutons d'action -->
        <button type="submit" class="btn btn-primary mt-3">
            <i class="fas fa-save"></i> Enregistrer
        </button>

        <a href="{{ path('salle_index') }}" class="btn btn-secondary mt-3">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>

        {{ form_end(form) }}
    </div>
{% endblock %}
